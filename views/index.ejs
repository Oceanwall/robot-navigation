<!DOCTYPE html>
<html>
  <head>
    <title>GDC Event Navigator</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/indexScript.js" type="text/javascript"></script>
  </head>
  <body>
    <div id="chooseDoors" class="selectorLocation">
      <form id="doorForm" onsubmit="processDoorChoice(event)">
        <div class="infoText2">There are multiple doors available for this room. Please select your preference.</div>
        <select id="doorSelect" required>
          <option value="a1">Door A1</option>
          <option value="a2">Door A2</option>
          <option value="a3">Door A3</option>
          <option value="b1">Door B1</option>
          <option value="b2">Door B2</option>
          <option value="b3">Door B3</option>
        </select> <br>
        <button type="submit" id="submit" class="submit2">
          SUBMIT
        </button>
      </form>
    </div>
    <h1 id="eventsTitle">GDC Event Navigator</h1>
    <div id="buttonContainer">
      <% for(var i = 0; i < results.length; i++) { %>
        <button type="button" class="eventButton">
          <h1 class="eventTitle"> <%= results[i].title %> </h1>
          <h3> <%= results[i].date %> </h3>
          <div class="eventDesc"> <%= results[i].description %> </div>
          <h3 id="roomNumber"> <%= results[i].room %> </h3>
          <div class="invisible"><%= results[i].tags %></div>
          <div class="iconHolder"></div>
        </button>
      <% } %>
    </div>
  </body>
</html>
